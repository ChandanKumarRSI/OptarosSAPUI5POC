<mvc:View xmlns:core="sap.ui.core" controllerName="OptarosSAPUI5POC.controller.CallDetail" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml">

	<Page>
		<customHeader>
			<Toolbar class="noBorder">
				<Button type="Transparent" icon="sap-icon://nav-back" press="handleNavButtonPress"></Button>
				<ToolbarSpacer/>
				<Image src="images/logo.png" class="rsLogo" densityAware="false"></Image>
				<ToolbarSpacer/>
				<Image src="images/logout_icon.png" class="rsIconH" densityAware="false" press="onPressLogout"></Image>

			</Toolbar>
		</customHeader>

		<l:Grid defaultSpan="L12 M12 S12" class="sapUiSmallMarginTop">
			<l:content>
				<Toolbar>
					<Title class="callDetailTitle" text="CALL DETAILS">
						<layoutData>
							<ToolbarLayoutData shrinkable="false" />
						</layoutData>
					</Title>

				</Toolbar>
				<HBox class="callDetailHB">
					<VBox width="100%">
						<Label class="callDetailLabel" text="Call To"></Label>
						<Text id="idCallTo" class="callDetailTxt" text=""></Text>
					</VBox>
					<core:Icon src="sap-icon://call" class="callDetailIcons"></core:Icon>
				</HBox>
				<HBox class="callDetailHB">
					<VBox width="100%">
						<Label class="callDetailLabel" text="Call Time"></Label>
						<Text id="idCalTime" class="callDetailTxt" text=""></Text>
					</VBox>
					<core:Icon src="sap-icon://appointment" class="callDetailIcons"></core:Icon>
				</HBox>
				<HBox class="callDetailHB">
					<VBox width="100%">
						<Label class="callDetailLabel" text="Duration"></Label>
						<Text id="idDuration" class="callDetailTxt" text=""></Text>
					</VBox>
					<core:Icon src="sap-icon://history" class="callDetailIcons"></core:Icon>
				</HBox>
				<HBox class="callDetailHB">
					<VBox width="100%">
						<Label class="callDetailLabel" text="Successfully"></Label>
						<Text id="idSuccessfully" class="callDetailTxt" text=""></Text>
					</VBox>
					<core:Icon src="sap-icon://accept" class="callDetailIcons"></core:Icon>
				</HBox>

			</l:content>
		</l:Grid>

	</Page>

</mvc:View>