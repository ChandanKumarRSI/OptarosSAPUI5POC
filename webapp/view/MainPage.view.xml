							<Table id="idCAllList"
								width="100%"
								noDataText="No calls available"
								mode="None"
								showSeparators="All"
								growing="false"
								growingThreshold="20"
								growingScrollToLoad="false"


								items="{/}">

								<columns>
									<Column
										width="30%">
										<Text text="Numbers" class="bluebg"/>
									</Column>
									<Column
										width="50%">
										<Text text="Call Date/Time" class="bluebg"/>
									</Column>

									<Column
										width="20%"
										hAlign="Center">
										<Text text="Details" class="bluebg"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>

										<cells>
											<Text
												text="{Number}"
											/>
											<Text
												text="{Date} , {Time}" />
											<Button icon="sap-icon://process" type="Accept" press="onPressCallDetail" class="qq"></Button>

										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>

				</items>
			</IconTabBar>
		</content>
		<footer id="idFooter">
			<Toolbar>
				<content>
					<ToolbarSpacer/>
					<core:Icon
						src="sap-icon://functional-location"
					>
					</core:Icon>
					<Text id="idFooterText" text="Data Location: Local System"></Text>
					<ToolbarSpacer/>
				</content>
			</Toolbar>
		</footer>
	</Page>

