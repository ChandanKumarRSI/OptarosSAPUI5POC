<mvc:View controllerName="OptarosSAPUI5POC.controller.MainPage" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<App>
		<pages>
			<Page id="idMainPage" backgroundDesign="Solid" showFooter="false">
                <customHeader>
                    <Toolbar>
                        <Image src="images/rsys.png" class="rsLogo" densityAware="false"></Image>
                        <ToolbarSpacer/>
                        <Title text="Optaros SAPUI5 POC"/>
                        <ToolbarSpacer/>
                        <core:Icon
                            src="sap-icon://log"
                            class="iconLogout"
                            press="onPressLogout"
                            >
                            <core:layoutData>
                                <FlexItemData growFactor="1" />
                            </core:layoutData>
                        </core:Icon>
                        
                    </Toolbar>
                </customHeader>
				<content></content>
			</Page>
		</pages>
	</App>
</mvc:View>