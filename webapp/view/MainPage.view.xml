<mvc:View controllerName="OptarosSAPUI5POC.controller.MainPage" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m">

	<Page id="idMainPage" backgroundDesign="Solid" showFooter="true">
		<customHeader>
			<Toolbar class="noBorder">

				<Image id="idConnStatus" src="" class="rsIconH" densityAware="false"></Image>
				<ToolbarSpacer/>
				<Image src="images/logo.png" class="rsLogo" densityAware="false"></Image>
				<ToolbarSpacer/>
				<Image src="images/logout_icon.png" class="rsIconH" densityAware="false" press="onPressLogout"></Image>

			</Toolbar>
		</customHeader>
		<content>
			<IconTabBar
				id="idIconTabBarNoIcons"
				select="handleTabBarSelect"
				stretchContentHeight="true"
				expanded="{device>/isNoPhone}"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						id="idProdListTab"
						text="Product List"
						key="productKey">
						<ScrollContainer
							height="100%"
							width="100%"
							horizontal="false"
							vertical="true">
							<Table class="tableProd"
								width="100%"
								noDataText="No products available"
								mode="None"
								showSeparators="All"
								growing="false"
								growingThreshold="20"
								growingScrollToLoad="false"


								items="{/}">

								<headerToolbar>
									<Toolbar class="titToolB" width="auto" height="46px" design="Transparent" visible="true" enabled="true">
										<ToolbarSpacer/>
										<Title class="pTitle" text="PRODUCT LIST" />
										<ToolbarSpacer/>
									</Toolbar>
								</headerToolbar>
								<columns>
									<Column
										width="40%">
										<Text text="Name" class="bluebg"/>
									</Column>
									<Column
										width="40%">
										<Text text="Quantity/Unit" class="bluebg"/>
									</Column>

									<Column
										width="20%">
										<Text text="Price" class="bluebg"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>

										<cells>

											<Text
												text="{ProductName}" />
											<Text
												text="{QuantityPerUnit}" />
											<Text
												text="{UnitPrice}"
											/>

										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
					<IconTabFilter
						id="idCallCounterTab"
						text="Call Counter"
						key="callCounterKey">
						<ScrollContainer
							height="100%"
							width="100%"
							horizontal="false"
							vertical="true">
							<VBox class="callVB">
								<HBox>
									<Label class="calPhTxt" text="Phone No."></Label>
									<core:Icon src="sap-icon://call" class="callIcons"/>
									<!--<Input class="callInput" type="Number" maxLength="10" id="idMobNum" value=""></Input>-->
									<MaskInput class="callInputWd" id="idMobNum" mask = "999999999999999" />
									<Button type="Transparent" class="vv" icon="sap-icon://call"  press="onPressCallNow"></Button>
								</HBox>
								<HBox>
									<Label class="calPhTxt" text="Call Count"></Label>
									<core:Icon src="sap-icon://number-sign" class="callIcons"/>
									<Input class="callInputWd" id="idAnsCallCounter" type="Number" value="0" editable="false"></Input>

								</HBox>
							</VBox>

